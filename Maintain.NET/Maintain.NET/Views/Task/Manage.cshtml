@model Maintain.NET.Models.UserMaintenanceTask
@using Maintain.NET.Data
@{
    Layout = "_Layout";
    ViewData["Title"] = "Complete Task";
}

@inject SignInManager<ApplicationUser> signInManager


<header id="main-header">
    @if (signInManager.IsSignedIn(User))
    {
        <div id="greeting">
            <div>
                <p>
                    <i>Hey, @User.Claims.First(c => c.Type == "FullName").Value </i>
                   
                    <a id="logout" asp-controller="Account" asp-action="Logout">Log Out</a>
                </p>

            </div>
        </div>
    }

    <h3 id="manage-title">Complete Task</h3>
</header>
<div id="complete-btn">


<a asp-action="Complete" asp-route-id="@Model.ID" id="add-button">Complete Task</a>
</div>

<h3>Task History</h3>

<div class="text-container-history">

@foreach (var item in Model.UserMaintenanceHistory)
{
    <p>Task Completed on @item.TimeComplete</p>
}
</div>

