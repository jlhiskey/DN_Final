@model Maintain.NET.Models.ViewModels.LoginViewModel

@{
    Layout = "_Layout";
}

<h1>Maintain.Net Registration</h1>
<div id="register">

<form method="post" >

    <div asp-validation-summary="All"></div>
    <div id="email" class="boxes">

    <label id="email" asp-for="Email">Email Address:</label>
    <input asp-for="Email" />
    <span asp-validation-for="Email"></span>
    </div>


    <div id="Fname" class="boxes">

    <label asp-for="FirstName">First Name:</label>
    <input asp-for="FirstName" />
    <span asp-validation-for="FirstName"></span>
    </div>

    <div id="Lname" class="boxes">

    <label asp-for="LastName">Last Name:</label>
    <input asp-for="LastName" />
    <span asp-validation-for="LastName"></span>
    </div>

    <div id="zip" class="boxes">
    <label asp-for="Zip">Zip Code:</label>
    <input asp-for="Zip" />
    <span asp-validation-for="Zip"></span>

    </div>

    <div id="pass" class="boxes">

    <label asp-for="Password">Password:</label>
    <input asp-for="Password" />
    <span asp-validation-for="Password"></span>
    </div>

    <div id="pass2" class="boxes">
    <label asp-for="ConfirmPassword">Confirm Password:</label>
    <input asp-for="ConfirmPassword" />
    <span asp-validation-for="ConfirmPassword"></span>

    </div>

    <button type="submit" id="create-btn">Create Account</button>

</form>
</div>

